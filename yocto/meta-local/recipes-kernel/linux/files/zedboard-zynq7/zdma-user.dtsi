///include/ "system-conf.dtsi"
/  {
	aliases {
		serial0 = &uart1;
		serial1 = &uart0;
	};

	chosen {
		bootargs = "console=ttyPS0,115200 earlycon";
	};

	reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;
		
		bank0: bank0@10000000 {
			reg = <0x10000000 0x02000000>;
			compatible = "shared-dma-pool";
			no-map;
		};
		
		bank1: bank1@12000000 {
			reg = <0x12000000 0x02000000>;
			compatible = "shared-dma-pool";
			no-map;
		};
		bank2: bank2@14000000 {
			reg = <0x14000000 0x02000000>;
			compatible = "shared-dma-pool";
			no-map;
		};
		bank3: bank3@16000000 {
			reg = <0x16000000 0x02000000>;
			compatible = "shared-dma-pool";
			no-map;
		};
		
	};

	amba_pl {
		zdma@0 {
			compatible = "tuc,zdma";
			#address-cells = <1>;
			#size-cells = <1>;
			ranges;

			partition@0 {
				compatible = "tuc,partition";
				reg = <0x43c00000 0x10000>;
				transport = <&dma0>;
			};
			partition@1 {
				compatible = "tuc,partition";
				reg = <0x43c10000 0x10000>;
				transport = <&dma1>;
			};
			partition@2 {
				compatible = "tuc,partition";
				reg = <0x43c20000 0x10000>;
				transport = <&dma2>;
			};
			partition@3 {
				compatible = "tuc,partition";
				reg = <0x43c30000 0x10000>;
				transport = <&dma3>;
			};

			zone@0 {
				compatible = "tuc,zone";
				memory-region = <&bank0>;
			};
			zone@1 {
				compatible = "tuc,zone";
				memory-region = <&bank1>;
			};
			zone@2 {
				compatible = "tuc,zone";
				memory-region = <&bank2>;
			};
			zone@3 {
				compatible = "tuc,zone";
				memory-region = <&bank3>;
			};
			
			dma0: dma-client@0 {
				compatible = "tuc,dma-client";
				dmas = <&axi_dma_0 0
					&axi_dma_0 1>;
				dma-names = "tx", "rx";
			};
			dma1: dma-client@1 {
				compatible = "tuc,dma-client";
				dmas = <&axi_dma_1 0
					&axi_dma_1 1>;
				dma-names = "tx", "rx";
			};
			dma2: dma-client@2 {
				compatible = "tuc,dma-client";
				dmas = <&axi_dma_2 0
					&axi_dma_2 1>;
				dma-names = "tx", "rx";
			};
			dma3: dma-client@3 {
				compatible = "tuc,dma-client";
				dmas = <&axi_dma_3 0
					&axi_dma_3 1>;
				dma-names = "tx", "rx";
			};
		};
	};
};

